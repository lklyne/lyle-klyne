---
import BaseLayout from "../layouts/BaseLayout.astro"
import BlogPost from "../components/BlogPost.astro"
const pageTitle = 'Blog'
const allPosts = await Astro.glob('../pages/posts/*.md')
const allPostsReversed = allPosts.reverse()

---
<style>
	body {
		background-color: rgb(25, 30, 26);
		color: rgba(255, 255, 255, 0.9);
	}
</style>

<BaseLayout pageTitle={pageTitle}>
	<br><br>
	{allPostsReversed.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} description={post.frontmatter.description} content={post.compiledContent()}></BlogPost>)}
</BaseLayout>

